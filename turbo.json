{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "APP_ENV",
    "SUPABASE_URL",
    "SUPABASE_ANON_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["^test"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false
    }
  }
}
